<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/tv_value"
        android:text="Ini adalah aplikasi absen dan aplikasi ini di gunakan untuk membantu guru Bimbingan Konseling atau BK"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_developer"
            android:text="Developer By"
            android:textColor="@android:color/holo_blue_light"
            android:layout_width="wrap_content"
            android:layout_marginTop="149dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_nama"
            android:text="Muhammad Zam Zam"
            android:layout_width="wrap_content"
            android:layout_marginTop="149sp"
            android:layout_marginLeft="90sp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btn_ok"
            android:layout_marginTop="180dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="10dp"
            android:text="OK"/>

    </RelativeLayout>


</RelativeLayout>